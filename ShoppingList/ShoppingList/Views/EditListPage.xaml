<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ShoppingList.ViewModels"
             x:Class="ShoppingList.Views.EditListPage">

    <ContentPage.BindingContext>
        <viewModels:ListViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>
            <Entry
                x:Name="EditEntry"
                Text="{Binding CurrentList.Title}"
                Placeholder="Varunamn"
                HeightRequest="100" />
            <!-- Layout children in two columns -->
            <Grid ColumnDefinitions="*,*">
                <Button Grid.Column="1"
                 Command="{Binding SaveEditListCommand}"
                 CommandParameter="{Binding CurrentList}"
                        Text="Spara" />
                <Button 
                    Text="Avbryt"
                    Command="{Binding CnacelEditListCommand}"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>